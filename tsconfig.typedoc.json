{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "paths": {
      "@aibos/contracts": ["packages/contracts/src/index.ts"],
      "@aibos/db": ["packages/db/src/index.ts"],
      "@aibos/accounting": ["packages/accounting/src/index.ts"],
      "@aibos/auth": ["packages/auth/src/index.ts"],
      "@aibos/ui": ["packages/ui/src/index.ts"],
      "@aibos/utils": ["packages/utils/src/index.ts"],
      "@aibos/realtime": ["packages/realtime/src/index.ts"],
      "@aibos/monitoring": ["packages/monitoring/src/index.ts"],
      "@aibos/security": ["packages/security/src/index.ts"],
      "@aibos/cache": ["packages/cache/src/index.ts"],
      "@aibos/tokens": ["packages/tokens/src/index.ts"],
      "@aibos/api-gateway": ["packages/api-gateway/src/index.ts"],
      "@aibos/deployment": ["packages/deployment/src/index.ts"],
      "@aibos/worker": ["services/worker/src/index.ts"],
      "@aibos/web-api": ["apps/web-api/src/index.ts"],
      "@aibos/eslint-config": ["packages/config/eslint-config"],
      "@aibos/tsconfig/*": ["packages/config/tsconfig/*"],
      "@aibos/tsconfig/react-lib.json": ["packages/config/tsconfig/react-lib.json"],
      "@aibos/tsconfig/node-lib.json": ["packages/config/tsconfig/node-lib.json"],
      "@aibos/tsconfig/next-app.json": ["packages/config/tsconfig/next-app.json"],
      "@aibos/tsconfig/vitest.json": ["packages/config/tsconfig/vitest.json"],
      "@aibos/tailwind-preset": ["packages/config/tailwind-preset"],
      "@aibos/vitest-config": ["packages/config/vitest-config"],
      "@aibos/prettier-config": ["packages/config/prettier-config"],
      "@aibos/contracts/*": ["packages/contracts/src/*"],
      "@aibos/db/*": ["packages/db/src/*"],
      "@aibos/accounting/*": ["packages/accounting/src/*"],
      "@aibos/auth/*": ["packages/auth/src/*"],
      "@aibos/ui/*": ["packages/ui/src/*"],
      "@aibos/utils/*": ["packages/utils/src/*"],
      "@aibos/realtime/*": ["packages/realtime/src/*"],
      "@aibos/monitoring/*": ["packages/monitoring/src/*"],
      "@aibos/security/*": ["packages/security/src/*"],
      "@aibos/cache/*": ["packages/cache/src/*"],
      "@aibos/tokens/*": ["packages/tokens/src/*"],
      "@aibos/api-gateway/*": ["packages/api-gateway/src/*"],
      "@aibos/deployment/*": ["packages/deployment/src/*"],
      "@aibos/worker/*": ["services/worker/src/*"],
      "@aibos/web-api/*": ["apps/web-api/src/*"]
    }
  }
}
