// Next.js app: The following overrides are required for Next.js app directory support and fast incremental builds.
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@aibos/web-api/_lib/*": ["./app/api/_lib/*"],
      "@aibos/web-api/middleware/*": ["./middleware/*"],
      "@aibos/web-api/lib/*": ["./lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
