{
  "name": "@aibos/db",
  "version": "0.1.0",
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.24.0",
    "typescript": "^5.6.2",
    "@aibos/eslint-config": "workspace:*",
    "@aibos/vitest-config": "workspace:*",
    "@aibos/prettier-config": "workspace:*"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p . --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "dev": "tsc -p . --watch",
    "lint": "eslint .",
    "typecheck": "tsc -p . --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
