{
    "extends": "./base.json",
    "compilerOptions": {
        "types": [
            "vitest/globals",
            "node"
        ],
        "noEmit": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "vitest.config.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
