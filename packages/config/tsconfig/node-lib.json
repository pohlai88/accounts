{
    "extends": "./base.json",
    "compilerOptions": {
        "lib": [
            "ES2022",
            "ES2023"
        ],
        "outDir": "dist",
        "noEmit": false,
        "types": [
            "node"
        ],
        "declaration": true,
        "declarationMap": true,
        "target": "ES2022"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
