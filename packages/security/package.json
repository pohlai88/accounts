{
  "name": "@aibos/security",
  "version": "0.1.0",
  "description": "Authentication and security utilities for AI-BOS Accounts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p . --noEmit",
    "dev": "tsc -p . --watch",
    "test": "vitest run",
    "typecheck": "tsc -p . --noEmit",
    "lint": "eslint .",
    "test:watch": "vitest",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "jose": "^5.10.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4",
    "@aibos/eslint-config": "workspace:*",
    "@aibos/vitest-config": "workspace:*",
    "@aibos/prettier-config": "workspace:*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}
